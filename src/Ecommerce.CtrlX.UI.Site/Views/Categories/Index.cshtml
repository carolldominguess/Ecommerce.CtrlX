@model IEnumerable<Ecommerce.CtrlX.Application.ViewModels.CategoriesViewModel>

@{
    ViewBag.Title = "Categorias";
}

<h2>@ViewBag.Title</h2>
<br />
<div class="pull-right">   
    <a class="btn btn-primary btn-lg" href="@Url.Action("Create", "Categories")">Nova categoria</a>
</div>
<br />
<br />
<br />
<table class="table">
    <tr>
        <th>
            Nome Categoria
        </th>
        <th>
            Data Cadastro
        </th>
        <th>
            Ativo
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataCadastro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { @class= "btn btn-primary", id=item.CategoriesId }) |
            @Html.ActionLink("Detalhes", "Details", new { @class = "btn btn-info", id =item.CategoriesId }) |
            @Html.ActionLink("Desativar", "Delete", new { @class = "btn btn-danger", id =item.CategoriesId })
        </td>
    </tr>
}

</table>
