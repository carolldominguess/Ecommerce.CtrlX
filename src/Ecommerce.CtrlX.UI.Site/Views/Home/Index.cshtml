@{
    ViewBag.Title = "Home Page";
}
<head>
    @Styles.Render("~/Content/indexcss")

    <style>
        input#img {
            display: block;
            margin-left: auto;
            margin-right: auto
        }

        figure img {
            width: 370px;
            height: 370px;
        }
    </style>

</head>

<body>
    <div class="row">
        <div class="col-md-12">
            <input type="image" src="~/Content/logo.jpeg" id="img" />
        </div>
    </div>

    <div class="row">
        <h2 style="margin-left:auto; margin-right:auto;">Bem-Vindo ao site da CTRLX Eletronics</h2>
        <div>
            <h3>Aqui você encontra os melhores preços para eletrônicos do Brasil!!</h3>
        </div>
    </div>

    <div class="row">
        <div class="gallery items-3">

            <div id="item-1" class="control-operator"></div>
            <div id="item-2" class="control-operator"></div>
            <div id="item-3" class="control-operator"></div>

            <figure class="item">
                <img src="~/Content/Pc_Gamer.jpeg" />
            </figure>
            <figure class="item">
                <img src="~/Content/Mouse_Gamer.jpeg" />
            </figure>
            <figure class="item">
                <img src="~/Content/Teclado_Gamer.jpeg" />
            </figure>

            <div class="controls">
                <a href="#item-1" class="control-button">.</a>
                <a href="#item-2" class="control-button">.</a>
                <a href="#item-3" class="control-button">.</a>
            </div>
        </div>
    </div>

</body>